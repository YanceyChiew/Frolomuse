<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Dialog.Dark.Purple" parent="Base.AppTheme.Dark.Dialog">
        <item name="seekBarStyle">@style/Base.SeekBar.Dark.Purple</item>
        <item name="colorAccent">@color/purple_accent</item>
        <item name="switchStyle">@style/Switch.Dark</item>
    </style>

    <style name="Chip.Choice.Dark.Purple" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_choice_dark_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.SeekBar.Dark.Purple" parent="Base.AppTheme.SeekBar">
        <item name="colorAccent">@color/purple_accent</item>
        <item name="android:progressBackgroundTint">#B8B7B7</item>
    </style>

    <style name="Button.Action.Purple" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/md_deep_purple_200</item>
        <item name="strokeColor">?attr/iconImageTint</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="icon">@drawable/ic_check_mark_white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/save</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="FloatingActionButton.Purple" parent="Widget.Design.FloatingActionButton">
        <item name="colorSecondary">@color/purple_accent</item>
    </style>

    <style name="Spinner.Dark.Purple" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:backgroundTint">#A4A6C7</item>
    </style>

    <style name="Base.Button.AlertDialog.Dark.Purple" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/md_purple_50</item>
        <item name="android:textColor">@color/md_purple_100</item>
    </style>

    <style name="Base.AlertDialog.Dark.Purple" parent="Base.AlertDialog.Dark.Blue">
        <item name="colorAccent">@color/md_purple_200</item>
        <item name="buttonBarButtonStyle">@style/Base.Button.AlertDialog.Dark.Purple</item>
    </style>

    <style name="Base.MaterialAlertDialog.Dark.Purple" parent="Base.AppTheme.MaterialAlertDialog">
        <item name="colorAccent">@color/md_purple_200</item>
    </style>

    <style name="Base.AppTheme.Dark.Purple" parent="Base.AppTheme.Dark">
        <item name="colorPrimary">@color/black_toolbar</item>
        <item name="colorPrimaryDark">@color/black_dark</item>
        <item name="colorAccent">@color/purple_accent</item>
        <item name="colorPrimaryVariant">#0E3655</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_accent</item>
        <item name="colorSecondaryVariant">#C159C5</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">@color/md_red_A100</item>
        <item name="colorSurface">@color/black_surface</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:dialogTheme">@style/Base.Dialog.Dark.Purple</item>
        <item name="dialogTheme">@style/Base.Dialog.Dark.Purple</item>
        <item name="alertDialogTheme">@style/Base.AlertDialog.Dark.Purple</item>
        <item name="materialAlertDialogTheme">@style/Base.MaterialAlertDialog.Dark.Purple</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.Dark.Blue.BottomSheetDialog</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout.Light.Blue</item>
        <item name="bottomNavigationStyle">@style/Base.AppTheme.Dark.BottomNavigation</item>
        <item name="toolbarStyle">@style/Base.AppTheme.Dark.Toolbar</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="seekBarStyle">@style/Base.SeekBar.Dark.Purple</item>
        <item name="chipStyle">@style/Chip.Choice.Dark.Purple</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton.Purple</item>
        <item name="spinnerStyle">@style/Spinner.Dark.Purple</item>
        <item name="spinnerDropDownItemStyle">@style/Spinner.DropDown.Dark</item>

        <item name="actionModeBackground">@color/md_deep_purple_A700</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Tinted</item>

        <item name="colorControlNormal">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_smoke</item>
        <item name="android:textColorHint">@color/gray_smoke</item>
        <item name="android:windowBackground">@drawable/png_dark_purple_main</item>

        <!--custom attrs-->
        <item name="modeOffTint">#b6b6b6</item>
        <item name="modeOnTint">#ff0066</item>
    </style>
</resources>