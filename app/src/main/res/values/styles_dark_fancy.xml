    <style name="AppTheme.Dialog.Dark.Fancy" parent="Base.AppTheme.Dark.Dialog">
        <item name="colorPrimary">@color/app_dark_fancy_primary</item>
        <item name="colorPrimaryDark">@color/app_dark_fancy_primary_dark</item>
        <item name="colorAccent">@color/app_dark_fancy_accent</item>
        <item name="colorPrimaryVariant">@color/app_dark_fancy_primary_variant</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <item name="colorSecondary">@color/app_dark_fancy_secondary</item>
        <item name="colorSecondaryVariant">@color/app_dark_fancy_secondary_variant</item>
        <item name="colorOnSecondary">@color/md_white_1000</item>
        <item name="colorError">#FF8B8B</item>
        <item name="colorSurface">@color/app_dark_fancy_surface</item>
        <item name="colorOnSurface">@color/md_white_1000</item>

        <item name="seekBarStyle">@style/AppTheme.SeekBar.Dark.Fancy</item>
        <item name="switchStyle">@style/Base.AppTheme.Switch.Dark</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout.Dark.Fancy</item>
        <item name="materialButtonStyle">@style/AppTheme.Button.TextButton.Dark.Fancy</item>

        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_grey_300</item>
        <item name="android:textColorHint">@color/md_grey_300</item>
