    </style>

    <style name="AppTheme.BottomSheetDialog.Dark.Fancy" parent="Base.AppTheme.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet.Dark.Fancy</item>
    </style>

    <style name="AppTheme.BottomSheet.Dark.Fancy" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dark_fancy</item>
    </style>

    <style name="AppTheme.SeekBar.Dark.Fancy" parent="Base.AppTheme.SeekBar">
        <item name="colorAccent">@color/app_dark_fancy_accent</item>
        <item name="android:progressBackgroundTint">#5A5A5A</item>
    </style>

    <style name="AppTheme.TextInputLayout.Dark.Fancy" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1.2dp</item>
        <item name="boxStrokeWidthFocused">1.4dp</item>
        <item name="boxStrokeColor">@color/app_dark_fancy_accent_ultra</item>
        <item name="hintTextColor">@color/app_dark_fancy_accent_ultra</item>
        <item name="android:textColorHint">@color/app_dark_fancy_accent_ultra</item>
        <item name="materialThemeOverlay">@style/AppTheme.TextInputEditText.Dark.Fancy</item>
    </style>

    <style name="AppTheme.TextInputEditText.Dark.Fancy" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/app_dark_fancy_accent_ultra</item>
    </style>

    <style name="AppTheme.TabLayout.Dark.Fancy" parent="Widget.MaterialComponents.TabLayout.Colored">
    </style>

    <style name="AppTheme.BottomNavigationView.Dark.Fancy" parent="Base.AppTheme.BottomNavigationView">
        <item name="itemIconTint">@color/nav_dark</item>
        <item name="background">@color/app_dark_fancy_primary_dark</item>
        <item name="android:background">@color/app_dark_fancy_window_background</item>
    </style>

    <style name="AppTheme.MiniVisualizer.Dark.Fancy" parent="Base.AppTheme.MiniVisualizer">
        <item name="barColor">@color/app_dark_fancy_accent_ultra</item>
    </style>

    <style name="AppTheme.Button.TextButton.Dark.Fancy" parent="Base.AppTheme.Button.TextButton">
        <item name="android:textColor">@color/app_dark_fancy_accent_ultra</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/app_dark_fancy_accent_ultra</item>
    </style>

    <style name="AppTheme.Button.TextButton.Dialog.Dark.Fancy" parent="Base.AppTheme.Button.TextButton.Dialog">
        <item name="rippleColor">@color/app_dark_fancy_accent_ultra</item>
        <item name="android:textColor">@color/app_dark_fancy_accent_ultra</item>
    </style>

    <style name="AppTheme.FastScroller.Dark.Fancy" parent="Base.AppTheme.FastScroller">
