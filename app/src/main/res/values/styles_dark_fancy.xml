        <item name="colorOnPrimary">@color/md_white_1000</item>
        <item name="colorPrimarySurface">@color/app_dark_fancy_primary_surface</item>
        <item name="colorOnPrimarySurface">@color/app_dark_fancy_on_primary_surface</item>
        <item name="colorSecondary">@color/app_dark_fancy_secondary</item>
        <item name="colorSecondaryVariant">@color/app_dark_fancy_secondary_variant</item>
        <item name="colorOnSecondary">@color/md_white_1000</item>
        <item name="colorError">#FF8B8B</item>
        <item name="colorSurface">@color/app_dark_fancy_surface</item>
