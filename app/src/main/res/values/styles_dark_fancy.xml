<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Dark fancy theme. All the styles are postfixed with .Dark.Fancy-->

    <color name="app_dark_fancy_window_background">#1C0C0C</color>
    <color name="app_dark_fancy_action_mode">#431829</color>
    <color name="app_dark_fancy_primary">#2C2024</color>
    <color name="app_dark_fancy_primary_dark">#2C2022</color>
    <color name="app_dark_fancy_primary_variant">#2C2020</color>
    <color name="app_dark_fancy_primary_surface">#B53F3F</color>
    <color name="app_dark_fancy_on_primary_surface">#FFFFFF</color>
    <color name="app_dark_fancy_secondary">@color/app_dark_fancy_accent_ultra</color>
    <color name="app_dark_fancy_secondary_variant">@color/app_dark_fancy_accent_ultra</color>
