    <style name="AppTheme.AlertDialog.Dark.Fancy" parent="Base.AppTheme.AlertDialog">
        <item name="colorSurface">@color/app_dark_fancy_surface</item>
        <item name="colorAccent">@color/app_dark_fancy_accent</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
        <item name="textColorAlertDialogListItem">@color/md_white_1000</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
        <item name="android:background">@color/app_dark_fancy_surface</item>

        <item name="buttonBarButtonStyle">@style/AppTheme.Button.TextButton.Dialog.Dark.Fancy</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.Button.TextButton.Dialog.Dark.Fancy</item>
