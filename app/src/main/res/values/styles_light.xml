<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Dialog.Light" parent="Base.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog_light</item>
        <item name="textInputStyle">@style/TextInputStyle.Light</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/md_grey_400</item>
        <item name="seekBarStyle">@style/Base.SeekBar.Light</item>
        <item name="colorAccent">@color/md_pink_500</item>
        <item name="switchStyle">@style/Switch.Light</item>
        <item name="colorControlHighlight">@color/light_gray</item>
    </style>

    <style name="Base.Button.AlertDialog.Light.Blue" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/md_blue_50</item>
        <item name="android:textColor">@color/md_blue_200</item>
    </style>

    <style name="Base.AlertDialog.Light.Blue" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorAccent">#E21A88</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="textColorAlertDialogListItem">@color/text_primary_dark</item>
        <item name="android:background">@drawable/bg_dialog_light</item>
        <item name="colorControlNormal">@color/md_grey_400</item>
        <item name="buttonBarButtonStyle">@style/Base.Button.AlertDialog.Light.Blue</item>
    </style>

    <style name="TextInputStyle.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1.2dp</item>
        <item name="boxStrokeWidthFocused">1.2dp</item>
        <item name="hintTextColor">@color/md_blue_400</item>
        <item name="android:textColorHint">@color/md_blue_400</item>
        <item name="boxStrokeColor">@color/edt_outline_light</item>
    </style>

    <style name="Base.BottomNavigation.Light" parent="Base.BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/nav_light</item>
    </style>

    <style name="Base.Toolbar.Light" parent="Base.Toolbar">
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Toolbar.TitleAppearance.Light.Expanded" parent="Toolbar.TitleAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_expanded</item>
    </style>

    <style name="Toolbar.TitleAppearance.Light.Collapsed" parent="Toolbar.TitleAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>

    <style name="ToolbarThemeOverlay.Light" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">#b6b6b6</item>
        <item name="actionMenuTextColor">@color/custom_black</item>
    </style>

    <style name="Base.Toolbar.Light.Player" parent="Base.Toolbar.Light">
        <item name="android:elevation">0dp</item>
        <item name="android:background">@null</item>
        <item name="colorControlNormal">#b6b6b6</item>
        <item name="android:theme">@style/ToolbarThemeOverlay.Light</item>
    </style>

    <style name="Base.MaterialAlertDialog.Light.Blue" parent="Base.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Dialog.Rounded</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorAccent">#414445</item>
        <item name="android:textColor">#414445</item>
        <item name="android:textColorPrimary">#414445</item>
        <item name="android:textColorSecondary">#919191</item>
        <item name="textColorAlertDialogListItem">#919191</item>
        <item name="colorControlNormal">@color/medium_gray</item>
        <item name="colorControlActivated">@color/md_pink_500</item>
    </style>

    <style name="Base.BottomSheet.Dialog.Light" parent="Base.BottomSheet.Dialog">
        <item name="colorControlHighlight">@color/light_gray</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Light</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="BottomSheet.Light" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_dialog_light</item>
    </style>

    <style name="Button.Action.Blue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/md_blue_A100</item>
        <item name="strokeColor">?attr/iconNormalTint</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconTint">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/save</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/android:textColor</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Base.SeekBar.Light" parent="Base.SeekBar">
        <item name="android:progressDrawable">@drawable/bg_progress_light</item>
    </style>

    <style name="Chip.Choice.Light" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_choice_light</item>
        <item name="android:textColor">@color/custom_black</item>
    </style>

    <style name="Switch.Light" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">#DFDFDF</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Spinner.Light" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:backgroundTint">#AAAAAA</item>
    </style>

    <style name="Spinner.DropDown.Light" parent="Widget.AppCompat.DropDownItem.Spinner">
    </style>

    <style name="IBar.Light" parent="android:style/Widget">
        <item name="activeColor">#9C9C9C</item>
        <item name="inactiveColor">#C3FFFFFF</item>
    </style>

    <!--LIGHT BLUE-->
    <style name="Base.AppTheme.Light" parent="Base.AppTheme">
        <item name="colorPrimary">@color/md_light_blue_800</item>
        <item name="colorPrimaryDark">@color/md_light_blue_900</item>
        <item name="colorAccent">@color/md_pink_500</item>
        <item name="colorPrimaryVariant">@color/md_indigo_A700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/md_pink_500</item>
        <item name="colorSecondaryVariant">@color/md_red_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/md_red_600</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/md_grey_800</item>
        <item name="dialogTheme">@style/Base.Dialog.Light</item>
        <item name="android:dialogTheme">@style/Base.Dialog.Light</item>
        <item name="alertDialogTheme">@style/Base.AlertDialog.Light.Blue</item>
        <item name="materialAlertDialogTheme">@style/Base.MaterialAlertDialog.Light.Blue</item>
        <item name="bottomSheetDialogTheme">@style/Base.BottomSheet.Dialog.Light</item>
        <item name="textInputStyle">@style/TextInputStyle.Light</item>
        <item name="bottomNavigationStyle">@style/Base.BottomNavigation.Light</item>
        <item name="toolbarStyle">@style/Base.Toolbar.Light</item>
        <item name="playerToolbarStyle">@style/Base.Toolbar.Light.Player</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="seekBarStyle">@style/Base.SeekBar.Light</item>
        <item name="chipStyle">@style/Chip.Choice.Light</item>
        <item name="spinnerStyle">@style/Spinner.Light</item>

        <item name="actionModeBackground">?colorContextual</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Tinted</item>

        <item name="colorControlNormal">@color/white</item>

        <item name="colorControlHighlight">@color/light_gray</item>

        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">#ADADAD</item>
        <item name="android:windowBackground">@color/almost_white</item>

        <!--custom attrs-->
        <item name="backdropBackLayer">?colorPrimaryDark</item>
        <item name="backdropFrontLayer">@color/white</item>
        <item name="colorContextual">@color/md_deep_purple_600</item>
        <item name="colorOnContextual">@color/white</item>
        <item name="itemIconForegroundTint">@color/item_icon_foreground_blue</item>
        <item name="itemIconBackgroundTint">@color/item_icon_background_blue</item>
        <item name="modeOffTint">#b6b6b6</item>
        <item name="modeOnTint">#ff0066</item>
        <item name="overlayTint">#9AFFFFFF</item>
        <item name="iconNormalTint">#b6b6b6</item>
        <item name="visualizerColor">@color/md_cyan_600</item>
        <item name="highlightColor">@color/md_blue_500</item>
        <item name="searchHeader">@color/md_blue_A100</item>
        <item name="buttonAction">@style/Button.Action.Blue</item>
        <item name="buttonCancel">@style/Button.Cancel.NoBackground</item>
        <item name="play_button_pause_background">#318E99FF</item>
        <item name="play_button_resume_background">#318E99FF</item>
        <item name="play_button_icon_tint">?attr/iconNormalTint</item>
        <item name="playPositionBackground">@color/play_position_background_light</item>

        <item name="iconSongPlaceholder">@drawable/ic_note_rounded_blue</item>
        <item name="iconAlbumPlaceholder">@drawable/ic_note_square_blue</item>
        <item name="iconAlbumArtLargePlaceholder">@drawable/ic_note_large_blue</item>
        <item name="iconMusicFolderPlaceholder">@drawable/ic_music_folder_rounded_blue</item>
        <item name="iconFilePlaceholder">@drawable/ic_file</item>

        <item name="iBarStyle">@style/IBar.Light</item>
    </style>
</resources>