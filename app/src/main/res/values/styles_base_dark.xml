<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Base dark theme-->
    <style name="Base.AppTheme.Dark" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarSize">@dimen/default_bar_size</item>
        <item name="android:actionBarSize">@dimen/default_bar_size</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_close</item>

        <!--Material colors-->
        <item name="colorPrimary">@color/md_light_blue_800</item>
        <item name="colorPrimaryDark">@color/md_light_blue_900</item>
        <item name="colorAccent">@color/md_pink_500</item>
        <item name="colorPrimaryVariant">@color/md_indigo_A700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/md_pink_500</item>
        <item name="colorSecondaryVariant">@color/md_red_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/md_red_600</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/md_grey_800</item>
        <item name="dialogTheme">@style/Base.AppTheme.Dialog.Light</item>
        <item name="android:dialogTheme">@style/Base.AppTheme.Dialog.Light</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheet.Dialog.Light</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout.Light.Blue</item>
        <item name="bottomNavigationStyle">@style/Base.AppTheme.Light.BottomNavigation</item>
        <item name="toolbarStyle">@style/Base.AppTheme.Light.Toolbar</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="tabStyle">@style/Base.AppTheme.TabLayout</item>
        <item name="android:textViewStyle">@style/Base.AppTheme.TextView</item>
        <item name="recyclerViewStyle">@style/Base.AppTheme.RecyclerView</item>

        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Tinted</item>
        <item name="actionOverflowMenuStyle">@style/Base.AppTheme.PopupMenu.Overflow</item>
        <item name="popupMenuStyle">@style/Base.AppTheme.PopupMenu</item>

        <item name="colorControlNormal">@color/white</item>

        <item name="colorControlHighlight">@color/light_gray</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>

        <!--Text appearances-->
        <item name="textAppearanceListItem">@style/Base.AppTheme.TextAppearance.ListItem</item>
        <item name="textAppearanceListItemSmall">@style/Base.AppTheme.TextAppearance.ListItem</item>
        <item name="textAppearanceListItemSecondary">@style/Base.AppTheme.TextAppearance.ListItemSecondary</item>

        <!--custom attrs-->
        <item name="iconImageTint">#FFFFFF</item>
        <item name="dividerTint">#ABABAB</item>
        <item name="iBarStyle">@style/Base.AppTheme.Dark.IBar</item>
        <item name="fastScrollerStyle">@style/Base.AppTheme.FastScroller</item>
    </style>

    <style name="Base.AppTheme.Dark.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/Base.AppTheme.WindowAnimation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>

        <item name="textAppearanceButton">@style/Base.AppTheme.TextAppearance.Button</item>

        <item name="materialButtonStyle">@style/Base.AppTheme.Button.TextButton</item>
    </style>

    <style name="Base.AppTheme.Dark.IBar" parent="android:style/Widget">
        <item name="activeColor">#D3FFFFFF</item>
        <item name="inactiveColor">#00FFFFFF</item>
    </style>

    <style name="Base.AppTheme.Dark.Toolbar" parent="Base.AppTheme.Toolbar">
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Base.AppTheme.Dark.BottomNavigation" parent="Base.AppTheme.BottomNavigationView">
        <item name="android:background">?colorPrimary</item>
        <item name="itemIconTint">@color/nav_dark</item>
    </style>

</resources>