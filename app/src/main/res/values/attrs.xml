<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Tint for all icons in the app including action icon, placeholders etc.-->
    <attr name="iconImageTint" format="color"/>
    <attr name="dividerTint" format="color"/>

    <attr name="modeOffTint" format="color"/>
    <attr name="modeOnTint" format="color"/>

    <attr name="backdropBackLayer" format="color|reference"/>
    <attr name="backdropFrontLayer" format="color|reference"/>

    <attr format="reference" name="iBarStyle"/>

    <attr name="waveformSeekBarStyle" format="reference"/>

    <declare-styleable name="FroloBar">
        <attr name="activeColor"/>
        <attr name="inactiveColor"/>
        <attr name="periodDuration"/>
        <attr name="pointCount"/>
    </declare-styleable>

    <declare-styleable name="IBar">
        <attr name="activeColor" format="color"/>
        <attr name="inactiveColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ControllerView">
        <attr name="label" format="string"/>
    </declare-styleable>

    <declare-styleable name="RoundedCornerImageView">
        <attr name="imageCornerRadius" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="CheckableImageView">
        <attr name="checkMarkShape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="square" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CheckView">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="circleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PlaceholderView">
        <attr name="image" format="reference"/>
        <attr name="message" format="string|reference"/>
    </declare-styleable>

    <!--Custom Media view state-->
    <declare-styleable name="MediaItemState">
        <attr name="state_item_checked" format="boolean" />
        <attr name="state_item_playing" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WaveformSeekBar">
        <attr name="waveBackgroundColor" format="color"/>
        <attr name="waveProgressColor" format="color"/>
        <attr name="waveGap" format="dimension"/>
        <attr name="waveCornerRadius" format="dimension"/>
        <attr name="waveMaxWidth" format="dimension"/>
        <attr name="waveAnimDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="OptionTextView">
        <attr name="optionTitle" format="string"/>
        <attr name="optionIcon" format="reference"/>
        <attr name="optionIconPadding" format="dimension"/>
    </declare-styleable>

    <attr name="optionTextViewStyle" format="reference"/>

    <!--MiniVisualizer-->
    <declare-styleable name="MiniVisualizer">
        <attr name="barColor" format="color" />
    </declare-styleable>

    <attr name="miniVisualizerStyle" format="reference"/>
</resources>