<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Button.AlertDialog.Dark.Blue" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/md_blue_50</item>
        <item name="android:textColor">@color/md_blue_200</item>
    </style>

    <style name="Base.AlertDialog.Dark.Blue" parent="Base.AppTheme.AlertDialog">
        <item name="colorAccent">@color/md_blue_400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="android:background">@drawable/bg_dialog_dark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="buttonBarButtonStyle">@style/Base.Button.AlertDialog.Dark.Blue</item>
    </style>

    <style name="Base.MaterialAlertDialog.Dark.Blue" parent="Base.AppTheme.MaterialAlertDialog">
        <item name="colorAccent">@color/md_blue_400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.Dark.Blue.BottomSheetDialog" parent="Base.AppTheme.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.Dark.Blue.BottomSheet</item>
        <item name="android:navigationBarColor">@color/custom_black</item>
    </style>

    <style name="AppTheme.Dark.Blue.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_dialog_dark</item>
    </style>

    <style name="Switch.Dark" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">#5E5E5E</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Spinner.DropDown.Dark" parent="">
        <item name="android:background">@drawable/bg_spinner_drop_down_dark</item>
    </style>

    <style name="Base.SeekBar.Dark.Blue" parent="Base.AppTheme.SeekBar">
        <item name="colorAccent">@color/dodger_blue</item>
        <item name="android:progressBackgroundTint">#B8B7B7</item>
    </style>

    <style name="Base.Dialog.Dark.Blue" parent="Base.AppTheme.Dark.Dialog">
        <item name="seekBarStyle">@style/Base.SeekBar.Dark.Blue</item>
        <item name="colorAccent">@color/dodger_blue</item>
        <item name="switchStyle">@style/Switch.Dark</item>
    </style>

    <style name="Chip.Choice.Dark.Blue" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_choice_dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Spinner.Dark.Blue" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:backgroundTint">#91ABB9</item>
    </style>

    <style name="Base.AppTheme.Dark.Blue" parent="Base.AppTheme.Dark">
        <item name="colorPrimary">@color/night_toolbar</item>
        <item name="colorPrimaryDark">@color/night_dark</item>
        <item name="colorAccent">@color/bondi_blue</item>
        <item name="colorPrimaryVariant">#0E3655</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#278DD3</item>
        <item name="colorSecondaryVariant">#C41C77</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#FF6E6E</item>
        <item name="colorSurface">@color/night_surface</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:dialogTheme">@style/Base.Dialog.Dark.Blue</item>
        <item name="dialogTheme">@style/Base.Dialog.Dark.Blue</item>
        <item name="alertDialogTheme">@style/Base.AlertDialog.Dark.Blue</item>
        <item name="materialAlertDialogTheme">@style/Base.MaterialAlertDialog.Dark.Blue</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.Dark.Blue.BottomSheetDialog</item>
        <item name="textInputStyle">@style/AppTheme.Light.Blue.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Base.AppTheme.Dark.BottomNavigation</item>
        <item name="toolbarStyle">@style/Base.AppTheme.Dark.Toolbar</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="seekBarStyle">@style/Base.SeekBar.Dark.Blue</item>
        <item name="chipStyle">@style/Chip.Choice.Dark.Blue</item>
        <item name="spinnerStyle">@style/Spinner.Dark.Blue</item>
        <item name="spinnerDropDownItemStyle">@style/Spinner.DropDown.Dark</item>

        <item name="actionModeBackground">@color/dodger_blue</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Tinted</item>

        <item name="colorControlNormal">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_smoke</item>
        <item name="android:textColorHint">@color/gray_smoke</item>
        <item name="android:windowBackground">@color/night_background</item>

        <!--custom attrs-->
        <item name="backdropBackLayer">#2D3F53</item>
        <item name="backdropFrontLayer">@color/night_background</item>
        <item name="modeOffTint">#b6b6b6</item>
        <item name="modeOnTint">#ff0066</item>
    </style>

    <!-- DARK ESPECIAL BLUE-->
    <style name="Base.AppTheme.Dark.Blue.Especial" parent="Base.AppTheme.Dark.Blue">
        <item name="android:windowBackground">@drawable/png_universe</item>
    </style>

</resources>