<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item>
        <ripple
            android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="#000000" />
                    <corners android:radius="@dimen/list_item_shape_radius" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <selector>
            <item app:state_item_checked="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/list_item_shape_radius"/>
                    <solid android:color="@color/bg_item_media"/>
                </shape>
            </item>

            <item app:state_item_playing="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/list_item_shape_radius"/>
                    <solid android:color="?playPositionBackground"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>