<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_actions"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            tools:title="Toolbar"
            tools:subtitle="Subtitle">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_visualizer_renderer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_visualizer_renderer_type"/>
        </com.google.android.material.appbar.MaterialToolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/include_audio_fx_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <include layout="@layout/include_audio_fx_content_lock"
                android:id="@+id/inc_audio_fx_content_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible"/>
        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/include_message"
        android:id="@+id/layout_player_placeholder"
        android:visibility="gone"/>
</FrameLayout>