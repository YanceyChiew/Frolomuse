<?xml version="1.0" encoding="utf-8"?>
<com.frolo.muse.views.TouchableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_audio_fx_content"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_preset_reverb_chooser"/>

    <include
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_preset_chooser"/>

    <com.frolo.muse.views.equalizer.EqualizerLayout
        android:layout_marginTop="28dp"
        android:visibility="visible"
        android:id="@+id/layout_eq_bars"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"/>

    <include
        android:layout_marginTop="12dp"
        layout="@layout/include_seekbar_bass_boost"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <include
        android:layout_marginTop="8dp"
        layout="@layout/include_seekbar_visualizer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <FrameLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <com.frolo.muse.views.visualizer.VisualizerView
            android:id="@+id/visualizer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
        <com.google.android.material.button.MaterialButton
            android:textSize="12sp"
            style="?attr/buttonAction"
            android:text="@string/show_visualizer"
            android:layout_gravity="center"
            android:id="@+id/btn_show_visualizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</com.frolo.muse.views.TouchableLinearLayout>