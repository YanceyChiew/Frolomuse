<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_player_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/include_message"
        android:id="@+id/layout_player_placeholder"
        android:visibility="gone"
        android:elevation="6dp"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/app_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">

        <com.frolo.muse.ui.main.player.TouchFrameLayout
            android:id="@+id/bottom_sheet_current_song_queue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?colorSurface"
            app:behavior_hideable="false"
            app:behavior_peekHeight="?actionBarSize"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <FrameLayout
                android:id="@+id/container_current_song_queue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?colorSurface"/>

            <FrameLayout
                android:id="@+id/fl_hook"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="top|center_horizontal"
                android:background="?selectableItemBackground">

                <ImageView
                    android:id="@+id/imv_hook_arrow"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_top_hook"
                    android:layout_gravity="center"
                    android:background="?selectableItemBackgroundBorderless"/>
            </FrameLayout>
        </com.frolo.muse.ui.main.player.TouchFrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>