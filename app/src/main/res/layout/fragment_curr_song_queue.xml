<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_cross_48dp"
            android:tint="?iconImageTint"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:gravity="start|center_vertical"
            android:ellipsize="end"
            android:textAppearance="?textAppearanceHeadline6"
            android:text="@string/queue"/>

        <TextView
            android:id="@+id/btn_save_as_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:gravity="center"
            android:textAppearance="?textAppearanceBody2"
            android:textSize="12sp"
            android:ellipsize="end"
            android:text="@string/save_as_playlist"
            android:background="?selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_divider_height"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="?dividerTint"/>

    <include layout="@layout/fragment_base_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>