<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/choose_playlist"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Text.Header.Subtitle"/>

        <ImageView
            android:background="?attr/selectableItemBackground"
            android:id="@+id/imv_close"
            android:tint="?attr/iconNormalTint"
            android:src="@drawable/ic_cross"
            android:padding="15dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <include layout="@layout/include_divider"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.frolo.muse.views.spring.SpringFastScrollRecyclerView
            style="@style/Base.RecyclerView"
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            android:visibility="gone"
            layout="@layout/include_placeholder"
            android:layout_gravity="center"
            android:id="@+id/layout_list_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.frolo.muse.views.progress.IBar
            android:id="@+id/pb_loading"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/include_progress_overlay"
            android:visibility="gone"
            android:id="@+id/inc_progress_overlay"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>