<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:padding="8dp">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="72dp"
        app:layout_constraintWidth_max="72dp"
        app:layout_constraintDimensionRatio="1"
        android:id="@+id/imv_art"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@drawable/ic_framed_music_note_48dp"/>

    <com.frolo.muse.views.text.AppTextSwitcher
        app:layout_constraintStart_toEndOf="@id/imv_art"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_play"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tsw_song_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:textAppearance="?textAppearanceBody2"
        app:textColor="?colorOnPrimary"
        tools:text="Song name"/>

    <com.frolo.mediabutton.PlayButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="48dp"
        app:layout_constraintWidth_max="48dp"
        app:layout_constraintDimensionRatio="1"
        android:id="@+id/btn_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_play_button_rounded_rect"
        app:pauseBackground="@color/white"
        app:resumeBackground="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>